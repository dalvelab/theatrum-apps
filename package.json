{
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:corporate": "cd apps/theatrum-schedule-pwa && npm run build",
    "build:wed": "cd apps/theatrum-web && npm run build",
    "dev": "turbo run dev",
    "dev:corporate": "cd apps/theatrum-schedule-pwa && npm run dev",
    "dev:web": "cd apps/theatrum-web && npm run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@turbo/gen": "^1.9.7",
    "eslint": "^7.32.0",
    "eslint-config-custom": "*",
    "prettier": "^2.5.1",
    "turbo": "latest"
  },
  "name": "theatrum-corp",
  "packageManager": "npm@9.6.7",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
